<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="30" >
        <TextView
            android:id="@+id/nameOfAssignmentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Name:" />

        <EditText
            android:id="@+id/assignmentName"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="30" >

        <TextView
            android:id="@+id/totalGradeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out of:" />

        <EditText
            android:id="@+id/addGradeAssignmentTotal"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="3" >

        </EditText>
    </LinearLayout>


    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        >
        
    
		    <LinearLayout
		    android:id="@+id/addGradeStudentListLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    
		    >
			        <TextView
			        android:id="@+id/studentListTv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Student List:" />
			        
		    </LinearLayout>

    </ScrollView>
    
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="5" >
    
	    	<Button
	        android:id="@+id/addGradeSubmitButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Submit" />
	    	
       </LinearLayout>
    

</LinearLayout>